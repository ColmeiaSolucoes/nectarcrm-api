/** 
 * Schema do Objeto Oportunidade
 */
{
	"type": "object",
	"properties": {
		"autor": {
			"type": "object",
			"properties": {
				"id": {
					"type": "integer"
				},
				"nome": {
					"type": "string"
				}
			}
		},
		"autorAtualizacao": {
			"type": "object",
			"properties": {
				"id": {
					"type": "integer"
				},
				"nome": {
					"type": "string"
				}
			}
		},
		"camposPersonalizados": {
			"type": "object",
			"properties": {
				"type": "string, string",
				"description": "label, valor"
			}
		},
		"cliente": {
			"id": "cliente",
			"type": "object",
			"properties": {
				"id": {
					"type": "long"
				}
			}
		},
		"codigo": {
			"type": "string"
		},
		"dataAtualizacao": {
			"type": "timestamp"
		},
		"dataCriacao": {
			"type": "timestamp"
		},
		"dataLimite": {
			"type": "timestamp"
		},
		"etapa": {
			"type": "integer"
		},
		"id": {
			"type": "integer"
		},
		"produtos": {
			"type": "array",
			"items": [{
				"id": {
					"type": "integer"
				},
				"comissaoPorcentual": {
					"type": "boolean",
					"default": false
				},
				"desconto": {
					"type": "float",
					"default": 0
				},
				"descontoPorcentual": {
					"type": "boolean",
					"default": false
				},
				"refId": {
					"type": "integer",
					"description": "ID de referÃªncia do produto cadastrado"
				},
				"nome": {
					"type": "string",
					"description": "Nome do produto"
				},
				"quantidade": {
					"type": "integer",
					"description": "Quantidade de produto"
				},
				"recorrencia": {
					"type": "integer",
					"description": "0 = Avulso, 1 = Mensal, 2 = Anual (mensal x 12)"
				},
				"valorUnitario": {
					"type": "float",
					"description": "Valor unitario do produto"
				},
				"valorTotal": {
					"type": "float",
					"description": "(Automatico) Valor unitario * quantidade - descontos"
				}
			}]
		},
		"nome": {
			"type": "string"
		},
		"observacao": {
			"type": "string"
		},
		"pipeline": {
			"type": "string"
		},
		"probabilidade": {
			"type": "integer"
		},
		"responsavel": {
			"type": "object",
			"properties": {
				"id": {
					"id": "id",
					"type": "integer"
				},
				"nome": {
					"id": "nome",
					"type": "string"
				}
			}
		},
		"status": {
			"id": "status",
			"type": "integer",
			"description": "1 = EM ANDAMENTO, 2 = GANHO, 3 = PERDIDO, 4 = CANCELADO"
		},
		"valorAvulso": {
			"type": "float"
		},
		"valorMensal": {
			"type": "float"
		},
		"camposPersonalizados": {
			"type": "object",
			"properties": {}
		}
	},
	"required": [
		"nome",
		"cliente"
	]
}