/** 
 * Schema do Objeto Oportunidade
 */
{
	"type": "object",
	"properties": {
		"autor": {
			"type": "object",
			"properties": {
				"id": {
					"type": "integer"
				},
				"nome": {
					"type": "string"
				}
			}
		},
		"autorAtualizacao": {
			"type": "object",
			"properties": {
				"id": {
					"type": "integer"
				},
				"nome": {
					"type": "string"
				}
			}
		},
		"camposPersonalizados": {
			"type": "object",
			"properties": {
				"type": "string, string",
				"description": "label, valor"
			}
		},
		"cliente": {
			"id": "cliente",
			"type": "object",
			"properties": {
				"id": {
					"type": "long"
				}
			}
		},
		"contato": {
			"id": "contato",
			"type": "object",
			"properties": {
				"id": {
					"type": "long"
				}
			}
		},
		"codigo": {
			"type": "string"
		},
		"dataAtualizacao": {
			"type": "datetime",
			"description": "ISO 8601 Date format : 2016-03-30T12:00:00-03:00"
		},
		"dataCriacao": {
			"type": "datetime",
			"description": "ISO 8601 Date format : 2016-03-30T12:00:00-03:00"
		},
		"dataLimite": {
			"type": "datetime",
			"description": "ISO 8601 Date format : 2016-03-30T12:00:00-03:00"
		},
		"etapa": {
			"type": "integer"
		},
		"id": {
			"type": "integer"
		},

		"justificativas": {
			"type": "array",
			"items": [
				{
					"id": {
						"type": "integer"
					},
					"nome": {
						"type": "string"
					}
				}
			]
		},

		"nome": {
			"type": "string"
		},
		"observacao": {
			"type": "string"
		},
		"origem": {
			"id": "origem da oportunidade",
			"type": "object",
			"properties": {
				"id": {
					"type": "long"
				}
			}
		},
		"pipeline": {
			"type": "string"
		},
		"funilVenda": {
			"type": "object",
			"properties": {
				"id": {
					"id": "id",
					"type": "integer"
				},
				"nome": {
					"id": "nome",
					"type": "string"
				}
			}
		},
		"probabilidade": {
			"type": "integer"
		},
		"produtos": {
			"type": "array",
			"items": [{
				"id": {
					"type": "integer"
				},
				"comissaoPorcentual": {
					"type": "boolean",
					"default": false
				},
				"desconto": {
					"type": "float",
					"default": 0
				},
				"descontoPorcentual": {
					"type": "boolean",
					"default": false
				},
				"refId": {
					"type": "integer",
					"description": "ID de referência do produto cadastrado"
				},
				"nome": {
					"type": "string",
					"description": "Nome do produto"
				},
				"quantidade": {
					"type": "integer",
					"description": "Quantidade de produto"
				},
				"recorrencia": {
					"type": "integer",
					"description": "0 = Avulso, 1 = Mensal, 2 = Anual (mensal x 12)"
				},
				"valorUnitario": {
					"type": "float",
					"description": "Valor unitario do produto"
				},
				"valorTotal": {
					"type": "float",
					"description": "(Automatico) Valor unitario * quantidade - descontos"
				}
			}]
		},
		"responsavel": {
			"type": "object",
			"properties": {
				"id": {
					"id": "id",
					"type": "integer"
				},
				"nome": {
					"id": "nome",
					"type": "string"
				}
			}
		},
		"status": {
			"id": "status",
			"type": "integer",
			"description": "1 = EM ANDAMENTO, 2 = GANHO, 3 = PERDIDO, 4 = CANCELADO"
		},
		"valorAvulso": {
			"type": "float"
		},
		"valorMensal": {
			"type": "float"
		},
		"valorTotal": {
			"type": "float",
			"description": "Valor total da oportunidade (contando itens e descontos)"
		},
		"valorTotalDescontos": {
			"type": "float",
			"description": "Valor total dos descontos)"
		},
		"camposPersonalizados": {
			"type": "object",
			"properties": {}
		},
		"tarefas": {
			"type": "int",
			"description": "Quantidade total de tarefas pendentes"
		},
		"compromissos": {
			"type": "int",
			"description": "Quantidade total de compromissos pendentes"
		},
		"bloquearProposta": {
			"type": "boolean",
			"description": "Status do bloqueio de geração de proposta da oportunidade"
		},
		"bloquearConclusao": {
			"type": "boolean",
			"description": "Status do bloqueio de conclusão de oportunidade"
		}
	},
	"required": [
		"nome",
		"cliente"
	]
}